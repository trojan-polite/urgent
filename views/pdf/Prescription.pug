      .line-area .line {
        width:100%;
        float:left;
        text-align: center;
        border-bottom: 2px solid #30c29f;
        line-height: 0.1em;
        margin: 10px 0 20px;
      }
      .line-area .line span {
        background: #fff;
        padding: 0 15px;
        text-align: center;
        font-size: 10pt;
        color: #30c29f;
      }
      .patient-area {
        margin-top: 25px;
        font-size: 7pt;
      }
      .patient-area .date {
        float:right;
        text-align:right;
      }
      .space{
        width:100%;
        height:60px;
        display:block;
