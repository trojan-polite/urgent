      p.letter{
        font-size : 7pt;
      }
      .medicament-area ul{
        list-style: none;
        margin: 0;
        padding: 0;
      }
      .medicament-area ul li{
        display: block;
        width: 100%;
        
      }
      .medicament-area ul li p{
        display: inline-block;
        padding-right:2%;
        float: left;
        
      }
      ul.medicamentsTitle{
        font-size: 7pt;

        color:#000;
      }
      ul.medicamentsList{
        font-size: 7pt;
        color:#333;
      }

      .boxesNumber{
         width: 3%;
      }
      .medicamentName{
         width: 22%;
      }
      .drugsNumber{
        width: 10%;
      }
      .daysNumber{
         width: 10%;
      }
      .times{
        width: 10%;
      } 
      .note{
        width: 30%;
      }
      .prescription-container {
        color: #001028;
        background: #FFFFFF;
        font-size: 7pt;
      }
      .prescription-container .water-mark {
  
        width: 85%;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90%;
        padding-top: 5%;
      }
      .prescription-container .water-mark > img {
        width: 45%;
        opacity: 0.3;
      }
      .presc-top-area {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .presc-top-area .logo-presc {
        margin-bottom: 10px;
      }
      .presc-top-area .logo-presc img {
        width: 30%;
      }
      .presc-top-area .doctor-presc .dr-name {
        color: #30c29f;
        font-size: 13px;
        font-weight:700; 
        margin-bottom:5px;
      }
      .presc-top-area .doctor-presc .dr-speciality {
        color: #62deff;
        font-size: 12px;
      }
     
      
      


